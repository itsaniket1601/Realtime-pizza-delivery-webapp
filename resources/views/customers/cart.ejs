<section class="cart py-16">

    <% if(session.cart) { %>

        <div class="order contaier mx-auto xl:w-1/2 px-8 md:px-32">
            <div class="flex items-center pb-4">
                <img src="/img/cart-black.png" alt="">
                <h1 class="font-bolx ml-4 text-2xl border-b-2 border-gray-300">Order summary</h1>

            </div>

            <div class="pizza-list">

                <% for( let pizza of Object.values(session.cart.items)) { console.log(pizza) %>

                    <div class="flex items-center my-8">
                        <img class="w-24" src="img/<%= pizza.item.image? pizza.item.image :pizza.png %>" alt="pizza">
                        <div class="ml-4 flex-1">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span>
                                <%= pizza.item.size %>
                            </span>
                        </div>
                        <span class=" flex-1">
                            <%= pizza.qty %> pcs
                        </span>
                        <span class="font-bold text-lg">
                            â‚¹ <%= pizza.qty * pizza.item.price %>
                        </span>
                    </div>

                    <% } %>


                        <hr>
                        <div class="text-right py-4">
                            <% if(user){ %>
                                <div>
                                    <span class="text-lg font-bold">Total Amount:</span>
                                    <span class="amount text-2xl font-bold ml-2">â‚¹ <%= session.cart.totalPrice %>
                                    </span>
                                </div>

                                <div>
                                    <form action="/orders" method="POST" class="mt-12" id="payment-form">

                                        <!-- select box -->
                                        <div class="relative w-3/4 ml-auto mb-4">
                                            <label for="countries"
                                                class="block mb-2 text-sm font-medium text-orange-600">Select payment
                                                method</label>
                                            <select id="paymentType" name="paymentType"
                                                class="bg-white border border-orange-300 text-gray-900 text-sm rounded-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5  dark:border-gray-600 dark:placeholder-gray-400 dark:focus:border-orange-900">
                                                <option value="COD">Cash on delivery</option>
                                                <option value="card">Pay with card</option>
                                            </select>
                                        </div>

                                        <input class="border border-gray-400 p-2 w-3/4 mb-4" type="text"
                                            placeholder="Phone" name="phone">
                                        <input class="border border-gray-400 p-2 w-3/4 mb-4" type="text"
                                            placeholder="Address" name="address">

                                        <div class="relative w-3/4 ml-auto mb-4">
                                            <div id="card-element">

                                            </div>
                                        </div>

                                        <div>
                                            <button
                                                class="btn-primary px-6 rounded-full py-2 text-white font-bold mt-6 "
                                                type="ubmit">
                                                <span>Submit</span>
                                            </button>
                                        </div>

                                    </form>

                                </div>

                                <% } else{ %>

                                    <a class="inline-block cursor-pointer btn-primary px-6 rounded-full py-2 text-white font-bold mt-6 "
                                        href="/login">Login to continue</a>
                                    <% } %>
                        </div>


            </div>

        </div>

        <% } else { %>

            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ™‚</h1>
                    <p class="text-gray-500 text-lg mb-12">You probabily haven't ordered a pizza yet. <br>
                        To order a pizza, go to the main page.
                    </p>
                    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go
                        Back</a>

                </div>
            </div>

            <% } %>

</section>